{
    "name": "@raysourcelabs/shared-auth",
    "version": "1.0.0",
    "description": "Shared authentication utilities for Raysource Labs applications",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.cjs",
            "types": "./dist/index.d.ts"
        },
        "./jwt": {
            "import": "./dist/jwt.js",
            "require": "./dist/jwt.cjs",
            "types": "./dist/jwt.d.ts"
        },
        "./types": {
            "import": "./dist/types.js",
            "require": "./dist/types.cjs",
            "types": "./dist/types.d.ts"
        }
    },
    "scripts": {
        "build": "tsup src/index.ts src/jwt.ts src/types.ts --format cjs,esm --dts --clean",
        "dev": "tsup src/index.ts src/jwt.ts src/types.ts --format cjs,esm --dts --watch",
        "lint": "eslint src/",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "jsonwebtoken": "^9.0.2",
        "bcryptjs": "^2.4.3"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/node": "^22.10.1",
        "tsup": "^8.3.5",
        "typescript": "^5.7.2"
    },
    "peerDependencies": {
        "pg": "^8.0.0"
    },
    "license": "MIT",
    "author": "Raysource Labs",
    "repository": {
        "type": "git",
        "url": "https://github.com/raysourcelabs/platform.git",
        "directory": "packages/shared-auth"
    }
}