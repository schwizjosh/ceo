# Cabinet Environment Configuration
# Copy this file to .env and fill in the values

# App
APP_NAME=Cabinet
ENVIRONMENT=production
DEBUG=false
PORT=5002

# CRITICAL: Same JWT secret as py.raysourcelabs.com
JWT_SECRET=your_jwt_secret_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Database - Cabinet (business data)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=cabinet_db
DATABASE_USER=andora_user
DATABASE_PASSWORD=your_password_here

# Database - Auth (shared with py.raysourcelabs.com)
AUTH_DATABASE_NAME=andora_db

# AI API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# File Upload
UPLOAD_DIR=/var/www/cabinet/backend/uploads
MAX_UPLOAD_SIZE_MB=500

# AI Models
WHISPER_MODEL=whisper-1
EMBEDDING_MODEL=text-embedding-ada-002
EMBEDDING_DIMENSIONS=1536
ANALYSIS_MODEL=gpt-4o

# Text Chunking
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# CORS
CORS_ORIGINS=https://cabinet.raysourcelabs.com,https://py.raysourcelabs.com

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/www/cabinet/logs/cabinet.log
